{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Project",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",
                "main.cpp",
                "ui/menu.cpp",
                "services/quanlylop.cpp",
                "services/thongke.cpp",
                "utils/datevalidator.cpp",
                "utils/filemanager.cpp",
